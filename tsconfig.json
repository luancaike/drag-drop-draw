{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@lc/drag-drop-draw": [
        "dist/lc/drag-drop-draw/lc-drag-drop-draw",
        "dist/lc/drag-drop-draw"
      ]
    }
  }
}
